<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.GamePlayController"
            style="-fx-background-color: #0A4A36;">

    <!-- TOP MENU BAR -->
    <top>
        <HBox spacing="40" style="-fx-padding: 15;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Options" style="-fx-text-fill: white; -fx-font-size: 20;"/>
                <Hyperlink text="Fresh Start" onAction="#onFreshStart"/>
                <Hyperlink text="NewLook" onAction="#onNewLook"/>
                <Hyperlink text="Exit" onAction="#onExit"/>
            </HBox>

            <Pane HBox.hgrow="ALWAYS"/>

            <ImageView>
                <Image url="@images/logo.png" />
            </ImageView>

            <Pane HBox.hgrow="ALWAYS"/>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Label text="Messages /" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                <Hyperlink text="Log" onAction="#scrollLog"/>
            </HBox>
        </HBox>
    </top>

    <!-- LEFT BETTING PANEL -->
    <left>
        <VBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Money Box -->
            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 8;">
                <Label text="Your Money" style="-fx-font-size: 18;" />
                <Label fx:id="totalMoneyLabel"
                       style="-fx-font-size: 28; -fx-text-fill: #000000 "/>
            </VBox>

            <!-- Pair Plus Circle -->
            <StackPane fx:id="pairPlusPane" >
                <Circle radius="44" fill="transparent" stroke="gold" strokeWidth="4"/>
                <VBox alignment="CENTER">
                    <Label text="Pair" style="-fx-text-fill: white;"/>
                    <Label text="Plus" style="-fx-text-fill: white;"/>
                    <Label fx:id="pairPlusLabel"
                           style="-fx-font-size: 18; -fx-text-fill: white;"/>
                </VBox>
            </StackPane>

            <!-- Ante Diamond -->
            <StackPane fx:id="antePane" >
                <Polygon points="0 40 40 0 80 40 40 80"
                         fill="transparent" stroke="red" strokeWidth="4"/>
                <VBox alignment="CENTER">
                    <Label text="Ante" style="-fx-text-fill: white;"/>
                    <Label fx:id="anteLabel"
                           style="-fx-font-size: 18; -fx-text-fill: white;"/>
                </VBox>
            </StackPane>

            <!-- Play Diamond -->
            <StackPane fx:id="playPane" >
                <Polygon points="0,40 40,0 80,40 40,80"
                         fill="transparent" stroke="white" strokeWidth="3"/>
                <VBox alignment="CENTER">
                    <Label text="Play" style="-fx-text-fill: white;"/>
                    <Label fx:id="playLabel"
                           style="-fx-font-size: 18; -fx-text-fill: white;"/>
                </VBox>
            </StackPane>

        </VBox>
    </left>

    <!-- RIGHT MESSAGE LOG -->
    <right>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <ListView fx:id="logView" prefWidth="300" prefHeight="500"
                      style="-fx-control-inner-background: #062E22; -fx-font-size: 14; -fx-text-fill: white;"/>
        </VBox>
    </right>

    <!-- CENTER PLAY AREA -->
    <center>
        <VBox alignment="CENTER" spacing="40">

            <!-- Dealer cards -->
            <HBox spacing="25" alignment="CENTER">
                <ImageView fx:id="dealerCard1" fitHeight="150" preserveRatio="true"/>
                <ImageView fx:id="dealerCard2" fitHeight="150" preserveRatio="true"/>
                <ImageView fx:id="dealerCard3" fitHeight="150" preserveRatio="true"/>
            </HBox>

            <!-- Player cards -->
            <HBox spacing="25" alignment="CENTER">
                <ImageView fx:id="playerCard1" fitHeight="150" preserveRatio="true"/>
                <ImageView fx:id="playerCard2" fitHeight="150" preserveRatio="true"/>
                <ImageView fx:id="playerCard3" fitHeight="150" preserveRatio="true"/>
            </HBox>

        </VBox>
    </center>

    <!-- BOTTOM BUTTONS -->
    <bottom>
        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
            <Button text="Deal"  onAction="#onDeal"
                    style="-fx-padding: 10 20; -fx-font-size: 18;"/>
            <Button text="Play"  onAction="#onPlay"
                    style="-fx-padding: 10 20; -fx-font-size: 18;"/>
            <Button text="Fold"  onAction="#onFold"
                    style="-fx-padding: 10 20; -fx-font-size: 18;"/>
        </HBox>
    </bottom>

</BorderPane>
