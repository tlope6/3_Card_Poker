<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.ScoreSceneController"
            styleClass="table-background">

    <!-- ===== CENTER SECTION (Dealer + Player cards + result text) ===== -->
    <center>
        <VBox alignment="CENTER" spacing="35" style="-fx-padding: 30;">

            <!-- Result Label -->
            <Label fx:id="resultLabel"
                   text="YOU WIN!"
                   styleClass="neutral"/>

            <!-- Winnings Label -->
            <Label fx:id="winningsLabel"
                   text="$0"
                   styleClass="neutral"/>

            <!-- Dealer Cards -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Dealer's Hand" styleClass="title-text"/>
                <HBox alignment="CENTER" spacing="20">
                    <ImageView fx:id="dealerCard1" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                    <ImageView fx:id="dealerCard2" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                    <ImageView fx:id="dealerCard3" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                </HBox>
            </VBox>

            <!-- Player Cards -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Your Hand" styleClass="title-text"/>
                <HBox alignment="CENTER" spacing="20">
                    <ImageView fx:id="playerCard1" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                    <ImageView fx:id="playerCard2" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                    <ImageView fx:id="playerCard3" fitHeight="140" preserveRatio="true" styleClass="card-view"/>
                </HBox>
            </VBox>

        </VBox>
    </center>

    <!-- ===== BOTTOM BUTTONS ===== -->
    <bottom>
        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 20;">
            <Button fx:id="playAgainButton" text="Play Again" styleClass="big-button"/>
            <Button fx:id="exitButton" text="Exit" styleClass="big-button"/>
        </HBox>
    </bottom>

</BorderPane>
